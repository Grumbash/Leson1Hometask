<!DOCTYPE html>
html(lang="en")
	head
		meta(charset="UTF-8")
		title Document
		// build:css css/vendor.css
		link(rel="stylesheet", href="libs/font-awesome.min.css")
		link(rel="stylesheet", href="libs/normalize.css")
		// endbuild

		// build:css css/main.css
		link(rel="stylesheet", href="css/main.css")
